@page "/"

@using Syncfusion.Blazor.Inputs
@using Syncfusion.Blazor.Calendars
@using Syncfusion.Blazor.DropDowns

<div>
    <h4>  Modify the Details </h4>
    <table style="margin-top: 30px">
        <tr>
            <td>Name</td>
            <td>
                <SfInPlaceEditor TValue="string" @bind-Value="@TextValue" Mode="@EditorMode">
                    <EditorComponent>
                        <SfTextBox Placeholder="Enter your name" @bind-Value="@TextValue"></SfTextBox>
                    </EditorComponent>
                </SfInPlaceEditor> 
            </td>
        </tr>
        <tr>
            <td>Date of Birth</td>
            <td>
                <SfInPlaceEditor TValue="DateTime" @bind-Value="@DateTimeValue"
                                 Type="Syncfusion.Blazor.InPlaceEditor.InputType.DateTime">
                    <EditorComponent>
                        <SfDatePicker TValue="DateTime" Placeholder="Select a date"
                                      @bind-Value="@DateTimeValue"></SfDatePicker>
                    </EditorComponent>
                </SfInPlaceEditor>
            </td>
        </tr>
        <tr>
            <td>Gender</td>
            <td>
                <SfInPlaceEditor TValue="string" 
                                 Type="Syncfusion.Blazor.InPlaceEditor.InputType.DropDownList"
                                 @bind-Value="@DropdownValue"  @attributes="HTMLAttributes"
                                 EditableOn="SetEditableType">
                    <EditorComponent>
                        <SfDropDownList TItem="DataModel" TValue="string" DataSource="@DropdownData"
                                        @bind-Value="@DropdownValue" Width="90%">
                            <DropDownListFieldSettings Text="Name"> </DropDownListFieldSettings>
                        </SfDropDownList>
                    </EditorComponent>
                </SfInPlaceEditor>
            </td>
        </tr>
    </table>
</div>

@code {

    public EditableType SetEditableType = EditableType.EditIconClick;

    Dictionary<string, object> HTMLAttributes = new Dictionary<string, object>()
    {
        { "data-underline", "false" }
    };

    public RenderMode EditorMode = RenderMode.Popup;

    public string DropdownValue = "Male";

    public class DataModel {

        public string Name { get; set; }
        public string ID { get; set; }
    }
    List<DataModel> DropdownData = new List<DataModel>
    {
        new DataModel(){ Name= "Male", ID= "G1"},
        new DataModel(){ Name= "Female", ID= "G2" }
    };

    public DateTime DateTimeValue = new DateTime(1998, 05, 23);
    public string TextValue = "Andrew";

}